@page
@model DownloadRecipesModel
@{
  ViewData["Title"] = "Download Recipes";
  ViewData["ActivePage"] = ManageNavPages.DownloadRecipes;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
  <div class="col-md-6">
    <p>Click below to get a JSON format of all recipes.</p>
    <form id="download-data" method="post" class="form-group">
      <button class="btn btn-primary" type="submit">Download Recipes</button>
    </form>
  </div>
</div>
